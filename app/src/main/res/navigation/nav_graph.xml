<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.collab.Welcome"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/welcome">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.collab.Login"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/login">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/login2"
            app:destination="@id/dashBoardFragment" />
    </fragment>
    <fragment
        android:id="@+id/dashBoardFragment"
        android:name="com.example.collab.DashBoard"
        android:label="fragment_dash_board"
        tools:layout="@layout/dash_board" />
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.collab.EditProfile"
        android:label="fragment_edit_profile"
        tools:layout="@layout/edit_profile" />
    <fragment
        android:id="@+id/createTeamFragment"
        android:name="com.example.collab.CreateTeam"
        android:label="fragment_create_team"
        tools:layout="@layout/create_team" />
    <fragment
        android:id="@+id/companiesFragment"
        android:name="com.example.collab.Companies"
        android:label="fragment_companies"
        tools:layout="@layout/companies" />
    <fragment
        android:id="@+id/myProjectsFragment"
        android:name="com.example.collab.MyProjects"
        android:label="fragment_my_projects"
        tools:layout="@layout/my_projects" />
    <fragment
        android:id="@+id/myTrackingFragment"
        android:name="com.example.collab.MyTracking"
        android:label="fragment_my_tracking"
        tools:layout="@layout/my_tracking" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.collab.Settings"
        android:label="fragment_settings"
        tools:layout="@layout/settings" />
    <fragment
        android:id="@+id/chooseRoleFragment"
        android:name="com.example.collab.ChooseRole"
        android:label="fragment_choose_role"
        tools:layout="@layout/choose_role" />
    <fragment
        android:id="@+id/studentRegisterFragment"
        android:name="com.example.collab.ui.login.StudentRegisterFragment"
        android:label="fragment_student_register"
        tools:layout="@layout/student_register" />
    <fragment
        android:id="@+id/companyRegisterFragment"
        android:name="com.example.collab.ui.login.CompanyRegisterFragment"
        android:label="fragment_company_register"
        tools:layout="@layout/company_register" />
    <fragment
        android:id="@+id/advisorRegisterFragment"
        android:name="com.example.collab.ui.login.AdvisorRegisterFragment"
        android:label="fragment_advisor_register"
        tools:layout="@layout/advisor_register" />
    <fragment
        android:id="@+id/addMemberFragment"
        android:name="com.example.collab.AddMember"
        android:label="fragment_add_member"
        tools:layout="@layout/add_member" />
    <fragment
        android:id="@+id/addProjectFragment"
        android:name="com.example.collab.MyProjects"
        android:label="fragment_add_member"
        tools:layout="@layout/project_details_popup" />
    <fragment
        android:id="@+id/editProfileStudentFragment"
        android:name="com.example.collab.EditProfileStudent"
        android:label="fragment_edit_profile_student"
        tools:layout="@layout/edit_profile_student" />
    <fragment
        android:id="@+id/editProfileCompanyFragment"
        android:name="com.example.collab.EditProfileCompany"
        android:label="fragment_edit_profile_company"
        tools:layout="@layout/edit_profile_company" />
</navigation>